/*Стиль базовых html5 блоков*/
body {
	font: 12px Tahoma, sans-serif;
	background: url(../images/slon.jpg);
	background-repeat: no-repeat;
	background-attachment: fixed;
	background-size: 100%;
	/*backdrop-filter: blur(10px);*/
	margin: 0;
}

p {
	margin: 15px 0;
	padding: 0 5px;
}

.wrapper {
	max-width: 1080px;
	margin: auto;
}

.upbutton {
	width: 88px; 
	height: 150px;
	position: fixed;
	bottom: 20px;
	right: 50px;
}

header {
	padding: 20px 0;
	background: #fffff;
}

main {
	background:#f3f3f3;
}

aside {
	float: left;
	width: 250px;
	background: #f3f3f3;
}

/* стиль основного текста (контента) */

section {
	margin-left: 280px;
	padding-bottom: 50px;
}

section > h2 {
	color: #000000;
}

section > p {
	color: #202020;
}

footer {
	color: #000000;
	font-size: 11px;
	background: #29c5e6;
}

.footer {
	max-width: 960px;
	margin: auto;
	padding: 0px 50px 0px;
	height: 90px;
}

/*Стиль полей ввода*/
.input {
	float: right;
}

/*Стиль навигационных ссылок меню*/
nav a {
	text-decoration: none;
}

nav ul {
	margin: 0;
	padding: 0;
}

nav li {
	list-style-position: inside;
	font: 14px 'Oswald', sans-serif;
	padding: 10px;
}

h1 {
	color: #ffffff;
	font: 40px/40px 'Oswald', sans-serif;
	margin: auto;
	padding: 0 70px;
}

h3 {
	color: #111111;
}

/*заголовка страницы*/
.heading {
	padding-left: 20px;
	padding: 50px 0;
}

/*Стиль меню сверху(основная навигация)*/
.top-menu {
	text-align: right;
}
.top-menu li {
	display: inline-block;
	padding: 10px 30px;
	margin: 10;
	background:rgba(0,0,0,0.1);
}

.top-menu li.active {
	background: #29c5e6;
	color: #fff;
}

.top-menu a {
	color: #ffffff;
}

/*Стиль подменю*/
.aside-menu li {
	font-weight: 500;
	list-style-type: square;
	border-top: 1px solid #e7e7e7;
}

.aside-menu li:first-child {
	border: none;
}

.aside-menu li.active {
	color: #29c5e6;
}

.aside-menu a {
	color: #8f8f8f;
}

aside > h2 {
	background: #29c5e6;
	font: 14px 'Oswald', sans-serif;
	color: #fff;
	padding: 10px;
	margin: 0px 0 0 0;
}

aside > h3 {
	background: #29c5e6;
	font: 14px 'Oswald', sans-serif;
	color: #fff;
	padding: 10px;
	margin: 40px 0 0 0;
}

aside > p {
	background: #f3f3f3;
	border: 1px solid #e7e7e7;
	padding: 10px;
	margin: 0;
}

table {
   width: 100%;
}
th {
  font-weight: normal;
  color: #039;
  padding: 10px 15px;
}
td {
  color: #669;
  border-top: 1px solid #e8edff;
  padding: 10px 15px;
}
tr:nth-child(2n) {
  background: #e8edff;
}

figure {
	display: inline-block;
	margin: 5px;
	font-family: 'Oswald', sans-serif;
	font-weight: 300;
	border: thick double #32a1ce;
}

#footer-logo {
	float: right;
	margin-top: 20px;
	font-size: 10px;
	text-align: right;
}

#social {
	float: left;
	margin-left: 20px;
	width: 130px;
}

.social-icon {
	width: 30px;
	height: 30px;
	display: inline-block;
	margin-right: 10px;
}

.google {
	background: url(../images/exel.png);
	background-position: -30px 0;
}

.dropbtn {
  background-color: #29c5e6;
  color: white;
  padding: 10px;
  font-size: 16px;
  border: none;
  margin: 10px;
}

.dropdown {
  position: relative;
  display: inline-block;
}

.dropdown-content {
  display: none;
  position: absolute;
  background-color: #f1f1f1;
  min-width: 160px;
  box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
  z-index: 1;
  top: 5px;
  left: 150px;
}

.dropdown-content a {
  color: black;
  padding: 12px 16px;
  text-decoration: none;
  display: block;
}

.dropdown-content a:hover {background-color: #ddd;}

.dropdown:hover .dropdown-content {display: block;}

.dropdown:hover .dropbtn {background-color: #128096;}

